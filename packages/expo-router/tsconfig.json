{
  "extends": "expo-module-scripts/tsconfig.base",
  "compilerOptions": {
    "outDir": "./build",
    "noEmit": true,
    "typeRoots": ["./ts-declarations", "../../node_modules/@types", "./node_modules/@types"],
    "types": [
      "jest",
      "node"
    ],
    "skipLibCheck": true
  },
  "include": ["./src"],
  "exclude": ["**/__mocks__/*", "**/__tests__/*"]
}
